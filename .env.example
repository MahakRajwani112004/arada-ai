# Magure AI Platform - Environment Configuration

# Application
APP_ENV=development
APP_DEBUG=true
APP_NAME=magure-ai-platform

# Temporal
TEMPORAL_HOST=localhost:7233
TEMPORAL_NAMESPACE=default
TEMPORAL_TASK_QUEUE=agent-tasks

# PostgreSQL
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/magure

# Redis (optional)
REDIS_URL=redis://localhost:6379/0

# Qdrant Vector DB (optional, for RAG)
QDRANT_HOST=localhost
QDRANT_PORT=6333

# LLM Providers (at least one required)
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Security
SECRET_KEY=your-secret-key-change-in-production

# Secrets Management
# Provider: "local" (default), "hashicorp", "aws", "azure"
VAULT_PROVIDER=local

# Local provider settings (default)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
SECRETS_ENCRYPTION_KEY=your-fernet-encryption-key

# HashiCorp Vault settings (when VAULT_PROVIDER=hashicorp)
VAULT_URL=http://localhost:8200
VAULT_TOKEN=dev-root-token

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WORKFLOW=10/minute
RATE_LIMIT_AGENTS=20/minute
RATE_LIMIT_DEFAULT=100/minute

# Workflow Execution
WORKFLOW_TIMEOUT_SECONDS=600

# Database Connection Pool
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_RECYCLE=3600

# Google OAuth (optional, for Calendar/Gmail/Drive integration)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
OAUTH_REDIRECT_URI=http://localhost:8000/api/v1/oauth/google/callback

# Microsoft OAuth (optional, for Outlook Calendar/Email integration)
# Create an app in Azure Portal: https://portal.azure.com/#blade/Microsoft_AAD_RegisteredApps
MICROSOFT_CLIENT_ID=your-azure-app-client-id
MICROSOFT_CLIENT_SECRET=your-azure-app-client-secret
MICROSOFT_TENANT_ID=common
MICROSOFT_OAUTH_REDIRECT_URI=http://localhost:8000/api/v1/oauth/microsoft/callback

# MCP Server URLs (defaults for local development)
MCP_GOOGLE_CALENDAR_URL=http://localhost:8001/mcp
MCP_GOOGLE_GMAIL_URL=http://localhost:8002/mcp
MCP_OUTLOOK_CALENDAR_URL=http://localhost:8004/mcp
MCP_OUTLOOK_EMAIL_URL=http://localhost:8005/mcp

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
